<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AHashPassGen"
             x:Class="AHashPassGen.App">
    <Application.DataTemplates>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
        <Style Selector=":is(TemplatedControl)">
            <Setter Property="FontSize" Value="{Binding Source={x:Static local:App.FontSize } }" />
        </Style>
    </Application.Styles>
</Application>
