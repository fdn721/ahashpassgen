<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:Common.Converters;assembly=Common"
        xmlns:p="clr-namespace:AHashPassGen.Properties"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AHashPassGen.Views.PropertiesView"
        SizeToContent="Height"
        MinWidth="300"
        Width="300"
        WindowStartupLocation="CenterOwner"
        Title="{x:Static p:I18n.Properties}">
    <Window.Resources>
        <conv:BoolToIntConverter x:Key="BoolToIntConverter"/>
    </Window.Resources>
    
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" ColumnDefinitions="Auto,*" Margin="10">
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0, 5, 0, 0" Text="{x:Static p:I18n.EncryptRecords}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="10, 5, 0, 0"  SelectedIndex="{Binding EncryptRecords, Converter={StaticResource BoolToIntConverter}}" HorizontalAlignment="Stretch" VerticalAlignment="Center"> 
            <ComboBoxItem Content="{x:Static p:I18n.Yes}"></ComboBoxItem>   
            <ComboBoxItem Content="{x:Static p:I18n.No}"></ComboBoxItem>
        </ComboBox>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0, 5, 0, 0" Text="{x:Static p:I18n.FontSize}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <NumericUpDown Grid.Row="1" Grid.Column="1" Margin="10, 5, 0, 0"  Minimum="8" Maximum="32" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="{x:Static p:I18n.OK}" Margin="0,0,0,0" Command="{Binding ApplyCommand}" ></Button>
            <Button Content="{x:Static p:I18n.Cancel}" Margin="5,0,0,0" Command="{Binding CloseCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
